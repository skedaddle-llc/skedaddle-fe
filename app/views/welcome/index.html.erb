<div id="bannerimage"></div>
<!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.75);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="card-title">Welcome to <strong>Skedaddle!</strong> </h2>
            <p class="card-text"><i>We're so glad you joined us.</i> </p>
             <br>
             <br>
            <p class="card-text">We're a community of people who love to travel and explore the world. We're here to help you find the best places to visit, and to help you plan your next trip. </p>
             <br>
            <p class = card-text">Current users: <%= @user_count %></p>
            <p class = card-text">Saved itineraries: <%= @itin_count %></p>
             <br>
            <p class = card-text">If you're new, login below using your <b>Google account</b>.</p>
            <p class = card-text">If you've traveled with us before, welcome back!</p>
            <br>
              <%= button_to "Log in with Google", '/auth/google_oauth2', :class => "buttonTo"   %>
          </div>
        </div>
      </div>
  <!--may need to store carousel elements in assets if site performance is impacted-->
  <div class="col-lg-6 mb-5 mb-lg-0">
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://images.pexels.com/photos/5940742/pexels-photo-5940742.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2/800x400?auto=yes&bg=777&fg=555&text=First slide" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.pexels.com/photos/1537635/pexels-photo-1537635.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2/800x400?auto=yes&bg=666&fg=444&text=Second slide" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.pexels.com/photos/7624986/pexels-photo-7624986.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2/800x400?auto=yes&bg=555&fg=333&text=Third slide" alt="Third slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.pexels.com/photos/3851424/pexels-photo-3851424.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2/800x400?auto=yes&bg=555&fg=333&text=Fourth slide" alt="Fourth slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
  <!-- Jumbotron -->
</section>